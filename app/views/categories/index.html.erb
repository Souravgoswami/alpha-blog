<h1 class="text-center mt-4">Categories</h1>

<div class="row">
	<% @categories.each do |x| %>
		<div class="col-md-4 p-2">
			<div class="card shadow-sm rounded">
				<div class="card-body">
					<%= link_to x do %>
						<h5 class="card-title"><%= text_limit(x.name, 36) %></h5>
					<% end %>

					<p class="card-text"><%= pluralize(x.articles.count, 'article') %></p>
					<div class="card-footer text-muted">
						Created <%= x.created_at.strftime("%d/%m/%y %H:%M") %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div>

<div class="pagination">
	<%= will_paginate @categories, container: false %>
</div>
