<h1>Article Listing Page</h1>

<%= link_to 'New Article', new_article_path %>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Description</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>

	<tbody>
		<% @articles.each do |x| %>
			<tr>
				<td><%= x.id %></td>
				<td><%= x.title %></td>
				<td><%= x.description %></td>
				<td><%= link_to 'Show', article_path(x) %></td>
				<td><%= link_to 'Edit', edit_article_path(x) %></td>
				<td><%= link_to 'Delete', article_path(x), method: :delete, data: { confirm: "Are you sure to delete article #{x.id}" } %></td>
			</tr>
		<% end %>
	</tbody>
</table>
